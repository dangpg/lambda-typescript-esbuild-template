{
  "name": "hello-world",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "lint": "eslint",
    "compile": "tsc",
    "build": "esbuild src/index.ts --bundle --outdir=dist --outbase=src/ --sourcemap=inline --platform=node",
    "watch": "esbuild src/index.ts --bundle --outdir=dist --outbase=src/ --sourcemap=inline --platform=node --watch",
    "start-api": "npm run build && sam.cmd local start-api --config-file ../../samconfig.toml --template-file ../../template.yaml -n ../../env.json --parameter-overrides DistFolder=dist/",
    "local-invoke": "npm run build && sam.cmd local invoke --config-file ../../samconfig.toml --template-file ../../template.yaml -n ../../env.json --parameter-overrides DistFolder=dist/",
    "debug": "npm run local-invoke -- --debug-port 5858"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/aws-lambda": "^8.10.93",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "esbuild": "^0.14.27",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
